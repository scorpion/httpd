# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

# Python
[*.html]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# PHP
[*.php]
indent_style = space
indent_size = 4

# Composer
[composer.json]
indent_style = space
indent_size = 2

# Docker YML
[docker-compose.yml]
indent_style = space
indent_size = 2

# Rust
[*.rs]
indent_style = space
indent_size = 4

# Yaml
[*.yaml]
indent_style = space
indent_size = 2
